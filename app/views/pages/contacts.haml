= render partial: 'shared/seo', locals: { page: @page }

.contacts.page.col-md-12
  .header.row{style: "background: url(#{@page.image.url}) no-repeat"}
    .container
      %h1= @page.heading
      %p.text= @page.text

  .contacts-list.cream-bg.row
    .container
      .row
        .col-md-6 
          %h2.title Контакты

          .phone
            .icon
              = image_tag 'pages/contacts/phone.png'
            .data
              %p Наш телефон:
              %strong +7 (812) 498-10-00

          .mail
            .icon
              = image_tag 'pages/contacts/mail.png'
            .data
              %p Наша почта:
              %strong owly@gmail.com

          .address
            .icon
              = image_tag 'pages/contacts/point.png'
            .data
              %p Наш адрес:
              %strong
                197022, Санкт-Петербург, ул. Льва Толстого, д. 9,
                %br/
                Бизнес центр "Толстой сквер"

        .col-md-6
          .map
            %iframe{:allowfullscreen => "", :frameborder => "0", :height => "280", :src => "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1996.9955369752358!2d30.314029486827778!3d59.9653975082703!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4696315b68bf319d%3A0x55e2da220927d7f3!2z0YPQuy4g0JvRjNCy0LAg0KLQvtC70YHRgtC-0LPQviwgOSwg0KHQsNC90LrRgi3Qn9C10YLQtdGA0LHRg9GA0LMsIDE5NzEwMQ!5e0!3m2!1sru!2sru!4v1456675245288", :style => "border:0", :width => "570"}

      .row
        .col-md-12
          %h2.title Мы в соцсетях:
          
          .social-icons
            .icon
              = link_to image_tag('pages/contacts/vk.png'), root_path
            .icon
              = link_to image_tag('pages/contacts/instagram.png'), root_path
            .icon
              = link_to image_tag('pages/contacts/twitter.png'), root_path
            .icon
              = link_to image_tag('pages/contacts/fb.png'), root_path

          .subscribe-text
            = image_tag 'pages/contacts/subscribe-text.png'

  .dark-cream-bg.row
    .question-form
      %p.text-center Заполните форму обратного звонка и мы свяжемся с Вами в ближайшее время!

      = render 'shared/question'