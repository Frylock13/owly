%ul.gallery-items.categories
  - categories.each do |category|
    - cache category do
      %li.gallery-item.category
        .gallery-contents
          .thumbnail.gallery-trigger
            = image_tag category.preview.url(:medium)

          .title
            = link_to category.name, category_path(category.slug)

        .gallery-expander
          .gallery-expander-contents
            .gallery-trigger-close.close
              = image_tag 'close-category.png'

            .col
              .image
                = image_tag category.preview

            .col
              .header
                %h2= category.name

              %p.desc= raw category.desc

              = link_to category_path(category.slug), class: 'btn btn-green-transparent' do
                Перейти к изделиям
                = image_tag 'home/about-arrow.png', class: 'btn-transparent-img'

:javascript
  (function(global, $){
      $('.gallery-items').imagelistexpander({
          prefix: "gallery-"
      });
  })(this, jQuery)