.cart-items
  .list
    - products.each do |product|
      - cache product do
        .product.row
          .col-md-2
            = image_tag product.image.url(:small)

          .col-md-5.first-block
            .product-name
              = link_to product.name, product_path(product.id)

            .product-price
              %strong
                = product.price
                %span руб.

            .product-calc
              .value
                Количество:
                = product.count

    .total
      %p
        %h2
          Итого:
          %strong
            = get_total_amount(products)
          руб.